<div class="project main-fluid">
    <div class="background">
        PROJECT
    </div>
    <div class="body">

        <h1>WEB DEVELOPER PROJECT</h1>
        <p>Filter project by:</p>
        <div class="row filter mb-4">
            <div class="btn-group-toggle active" data-toggle="buttons">
                <label class="btn btn-outline-success">
                    <input type="checkbox"> Show All
                </label>

                <label class="btn btn-outline-success">
                    <input type="checkbox"> HTML5
                </label>

                <label class="btn btn-outline-success">
                    <input type="checkbox"> CSS3
                </label>

                <label class="btn btn-outline-success">
                    <input type="checkbox"> SASS
                </label>

                <label class="btn btn-outline-success">
                    <input type="checkbox"> Bootstrap
                </label>

                <label class="btn btn-outline-success">
                    <input type="checkbox"> NodeJS
                </label>

                <label class="btn btn-outline-success">
                    <input type="checkbox"> ReactJS
                </label>

                <label class="btn btn-outline-success">
                    <input type="checkbox"> PHP
                </label>

                <label class="btn btn-outline-success">
                    <input type="checkbox"> MySQL
                </label>

                <label class="btn btn-outline-success">
                    <input type="checkbox"> MongoDB
                </label>
            </div>
        </div>
        <div class="project-list" style="overflow-y:auto; height:40rem; overflow-x:hidden;">
            <div class="row justify-content-around">

                {{#each projects}}
                <div class="card bg-dark text-white mb-4 project-items"
                    style="border:none; box-shadow:3px 4px 6px #333;">
                    <img src="img/project-image-1.png" class="card-img item-image" alt="...">
                    <div class="card-img-overlay item-profile"
                        style="overflow-y: auto; overflow-x:hidden; padding: 1rem 0 1rem 2rem">
                        <h5 class="card-title">{{this.projectName}} - <span>{{this.projectProgress}}</span></h5>
                        <div class="item-profile-icon" style="position:relative;">
                            <div class="row justify-content-start" style="height: 65%;">

                                {{#each this.codeTechnologies}}
                                <div class="item-icon mb-2">
                                    <img src="img/Icon awesome-{{this}}.svg" alt="">
                                    {{this}}
                                </div>
                                {{/each}}

                            </div>
                            <p><a href="#" class="btn btn-danger">View More</a>
                            </p>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>
</div>

<script src="js/script.js"></script>

<script type="handlebars/text">
    Handlebars.registerHelper('setIndex', function (value) {
        this.index = Number(value + 1); //I needed human readable index, not zero based
    });
</script>